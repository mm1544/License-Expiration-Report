<odoo>
  <data>
    <record id="licence_expiration_report_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.licence_expiration_report</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-string='Inventory']" position="inside">
          <div id="licence_expiration_report">
            <h2>Licence Expiration Report Settings</h2>
            <div class="row mt16 o_settings_container" id="licence_expiration_report_settings">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <div class="w-100">
                    <span class="o_form_label">Recipient Email</span>
                  </div>
                  <div class="mt16">
                    <field name="recipient_email"/>
                    <br/>
                  </div>
                </div>
              </div>
            </div>

            <div class="row mt16 o_settings_container" id="licence_expiration_report_settings">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <div class="w-100">
                    <span class="o_form_label">Sender Email</span>
                  </div>
                  <div class="mt16">
                    <field name="sender_email"/>
                    <br/>
                  </div>
                </div>
              </div>
            </div>

            <div class="row mt16 o_settings_container" id="licence_expiration_report_settings">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <div class="w-100">
                    <span class="o_form_label">CC Email</span>
                  </div>
                  <div class="mt16">
                    <field name="cc_email"/>
                    <br/>
                  </div>
                </div>
              </div>
            </div>

            <div class="row mt16 o_settings_container" id="licence_expiration_report_settings">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                  <div class="w-100">
                    <span class="o_form_label">Time Checkpoints</span>
                  </div>
                  <div class="mt16">
                    <field name="time_checkpoints"/>
                    <br/>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>

    <record id="licence_expiration_report_config_settings_action" model="ir.actions.act_window">
      <field name="name">Licence Expiration Report Settings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
      <!-- might need to change context > module -->
      <field name="context">{'module': 'stock.picking.type', 'bin_size': False}</field>
    </record>

    <menuitem id="licence_expiration_report_config_menu" name="Settings" parent="stock.menu_stock_config_settings" sequence="2" action="licence_expiration_report_config_settings_action"/>


  </data>
</odoo>

